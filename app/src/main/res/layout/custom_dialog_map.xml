<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="viewStart"
        android:layout_margin="20px"
        android:text="Clique no local exato do endereço no mapa, e em seguida clique no botão 'Usar este ponto'!"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapLatLon"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/usePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:background="@drawable/button_cadastro_radius"
        android:textColor="#FFF"
        android:padding="10dp"
        android:text="Usar este ponto" />

</LinearLayout>